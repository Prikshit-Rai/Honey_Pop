<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView5"
                android:layout_width="match_parent"
                android:layout_height="469dp"

                android:src="@drawable/black_half_border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins"
                android:text="Select match region "
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="@+id/appCompatImageView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/appCompatImageView5"
                app:layout_constraintTop_toBottomOf="@+id/textView8">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/global"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/transparent"
                    android:fontFamily="@font/poppins"
                    android:gravity="start"
                    android:paddingStart="15dp"
                    android:paddingTop="6dp"
                    android:text="Global"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/uk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/transparent"
                    android:fontFamily="@font/poppins"
                    android:gravity="start"
                    android:paddingStart="15dp"
                    android:paddingTop="6dp"
                    android:text="U.K."
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/usa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/transparent"
                    android:fontFamily="@font/poppins"
                    android:gravity="start"
                    android:paddingStart="15dp"
                    android:paddingTop="6dp"
                    android:text="U.S.A."
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/india"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/transparent"
                    android:fontFamily="@font/poppins"
                    android:gravity="start"
                    android:paddingStart="15dp"
                    android:paddingTop="6dp"
                    android:text="India"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/australia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/transparent"
                    android:fontFamily="@font/poppins"
                    android:gravity="start"
                    android:paddingStart="15dp"
                    android:paddingTop="6dp"
                    android:text="Australia"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bangladesh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/transparent"
                    android:fontFamily="@font/poppins"
                    android:gravity="start"
                    android:paddingStart="15dp"
                    android:paddingTop="6dp"
                    android:text="Bangladesh"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/indonesia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/transparent"
                    android:fontFamily="@font/poppins"
                    android:gravity="start"
                    android:paddingStart="15dp"
                    android:paddingTop="6dp"
                    android:text="Indonesia"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>