<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="31dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView5"
                android:layout_width="match_parent"
                android:layout_height="274dp"
                android:src="@drawable/black_half_border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins"
                android:text="Select Gender"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="@+id/appCompatImageView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView5" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/female"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/unselected"
                android:src="@drawable/female_icon"
                app:layout_constraintStart_toStartOf="@+id/appCompatImageView5"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/female_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins"
                android:text="Female"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/female"
                app:layout_constraintStart_toStartOf="@+id/female"
                app:layout_constraintTop_toBottomOf="@+id/female" />

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="42dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/icon"
                app:layout_constraintEnd_toEndOf="@+id/female_text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/female_text"
                app:layout_constraintTop_toBottomOf="@+id/female_text" />

            <TextView
                android:id="@+id/number1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/poppins"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/icon1"
                app:layout_constraintStart_toEndOf="@+id/icon1"
                app:layout_constraintTop_toTopOf="@+id/icon1"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/male"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_marginStart="28dp"
                android:background="@drawable/unselected"
                android:src="@drawable/male_icon"
                app:layout_constraintBottom_toBottomOf="@+id/female"
                app:layout_constraintStart_toEndOf="@+id/female"
                app:layout_constraintTop_toTopOf="@+id/female"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/male_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins"
                android:text="Male"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/male"
                app:layout_constraintStart_toStartOf="@+id/male"
                app:layout_constraintTop_toBottomOf="@+id/male" />

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="42dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/icon"
                app:layout_constraintEnd_toEndOf="@+id/male_text"
                app:layout_constraintHorizontal_bias="0.166"
                app:layout_constraintStart_toStartOf="@+id/male_text"
                app:layout_constraintTop_toBottomOf="@+id/male_text" />

            <TextView
                android:id="@+id/number2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/poppins"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/icon2"
                app:layout_constraintStart_toEndOf="@+id/icon2"
                app:layout_constraintTop_toTopOf="@+id/icon2"
                app:layout_constraintVertical_bias="0.0" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/both"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_marginStart="28dp"
                android:background="@drawable/unselected"
                android:src="@drawable/both"
                app:layout_constraintBottom_toBottomOf="@+id/male"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/male"
                app:layout_constraintTop_toTopOf="@+id/male"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/both_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins"
                android:text="Both"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/both"
                app:layout_constraintStart_toStartOf="@+id/both"
                app:layout_constraintTop_toBottomOf="@+id/both" />


            <TextView
                android:id="@+id/free"
                android:layout_width="42dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_marginTop="16dp"
                android:text="Free"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"
                app:layout_constraintEnd_toEndOf="@+id/both_text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/both_text"
                app:layout_constraintTop_toBottomOf="@+id/both_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>