<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zBlack"
    tools:context=".Edit_Details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/back_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/poppins"
                    android:text="Edit Info"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="@+id/back_btn"
                    app:layout_constraintStart_toEndOf="@+id/back_btn"
                    app:layout_constraintTop_toTopOf="@+id/back_btn"
                    app:layout_constraintVertical_bias="0.423" />


            <ImageView
                android:id="@+id/preview"
                android:layout_width="105dp"
                android:layout_height="36dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/grey_border"
                app:layout_constraintBottom_toBottomOf="@+id/textView23"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView23" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:foregroundGravity="center"
                android:src="@drawable/preview"
                app:layout_constraintBottom_toBottomOf="@+id/preview"
                app:layout_constraintStart_toStartOf="@+id/preview"
                app:layout_constraintTop_toTopOf="@+id/preview"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Preview"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/preview"
                app:layout_constraintEnd_toEndOf="@+id/preview"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView19"
                app:layout_constraintTop_toTopOf="@+id/preview"
                app:layout_constraintVertical_bias="0.545" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView3"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/black_half_border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <LinearLayout
                android:id="@+id/imageView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/selected"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView23" >

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="333dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/selected"
                    android:fontFamily="@font/poppins"
                    android:padding="5dp"
                    android:text="Uploading a great photo and sharing information about yourself on your profile will increase your chances of a match!"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView22"
                    app:layout_constraintStart_toStartOf="@+id/imageView22"
                    app:layout_constraintTop_toTopOf="@+id/imageView22"
                    app:layout_constraintVertical_bias="0.571" />

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="27dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/side_btn"
                    app:layout_constraintBottom_toBottomOf="@+id/textView24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView24"
                    app:layout_constraintVertical_bias="0.509" />

            </LinearLayout>


            <TextView
                android:id="@+id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/grey_border"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="AVATAR"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.047"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView22" />

            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:layout_marginTop="5dp"
                android:fillViewport="true"
                app:layout_constraintEnd_toEndOf="@+id/imageView22"
                app:layout_constraintHorizontal_bias="0.375"
                app:layout_constraintStart_toStartOf="@+id/imageView22"
                app:layout_constraintTop_toBottomOf="@+id/avatar">


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/avatar1"
                            android:layout_width="0dp"
                            android:layout_height="170dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selected"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="55sp" />

                        <TextView
                            android:id="@+id/avatar2"
                            android:layout_width="0dp"
                            android:layout_height="170dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selected"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="55sp" />

                        <TextView
                            android:id="@+id/avatar3"
                            android:layout_width="0dp"
                            android:layout_height="170dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selected"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="55sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/avatar4"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selected"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="55sp" />

                        <TextView
                            android:id="@+id/avatar5"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selected"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="55sp" />

                        <TextView
                            android:id="@+id/avatar6"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selected"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="55sp" />

                    </TableRow>
                </TableLayout>

            </ScrollView>

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:text="Touch and hold a photo to drag it to another location."
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/scrollView3"
                app:layout_constraintStart_toStartOf="@+id/scrollView3"
                app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="3dp"
                android:fillViewport="true"
                app:layout_constraintBottom_toTopOf="@+id/appCompatImageView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView25">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView24"
                        android:layout_width="match_parent"
                        android:layout_height="116dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/dark_grey_border"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/nothing_img"
                        app:layout_constraintStart_toStartOf="@+id/imageView24"
                        app:layout_constraintTop_toTopOf="@+id/imageView24" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/poppins"
                        android:text="Basic Information"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView25"
                        app:layout_constraintStart_toEndOf="@+id/imageView25"
                        app:layout_constraintTop_toTopOf="@+id/imageView25"
                        app:layout_constraintVertical_bias="0.0" />

                    <LinearLayout
                        android:id="@+id/nick_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/imageView24"
                        app:layout_constraintStart_toStartOf="@+id/imageView25"
                        app:layout_constraintTop_toBottomOf="@+id/textView26">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:text="Nickname"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/nick_name_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:hint="Rajesh Kumar"
                            android:textColorHint="@color/white"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/side_btn" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/nick_name"
                        app:layout_constraintStart_toStartOf="@+id/imageView24"
                        app:layout_constraintTop_toBottomOf="@+id/nick_name">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:text="Birthday"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint=""
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/side_btn" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/Interest"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/dark_grey_border"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView24" />

                    <ImageView
                        android:id="@+id/interest_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/interest_logo"
                        app:layout_constraintStart_toStartOf="@+id/Interest"
                        app:layout_constraintTop_toTopOf="@+id/Interest" />

                    <TextView
                        android:id="@+id/Interest_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/poppins"
                        android:text="Interests"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="@+id/interest_logo"
                        app:layout_constraintStart_toEndOf="@+id/interest_logo"
                        app:layout_constraintTop_toTopOf="@+id/interest_logo"
                        app:layout_constraintVertical_bias="0.0" />

                    <EditText
                        android:id="@+id/interests"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:hint="Write your interests here!!"
                        android:textColorHint="@color/white"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="@+id/Interest_name"
                        app:layout_constraintStart_toStartOf="@+id/interest_logo"
                        app:layout_constraintTop_toBottomOf="@+id/Interest_name"
                        tools:ignore="InvalidId" />

                    <ImageView
                        android:id="@+id/language"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="6dp"
                        android:src="@drawable/dark_grey_border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Interest" />

                    <ImageView
                        android:id="@+id/language_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/language_logo"
                        app:layout_constraintStart_toStartOf="@+id/language"
                        app:layout_constraintTop_toTopOf="@+id/language" />

                    <TextView
                        android:id="@+id/language_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/poppins"
                        android:text="Languages"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="@+id/language_logo"
                        app:layout_constraintStart_toEndOf="@+id/language_logo"
                        app:layout_constraintTop_toTopOf="@+id/language_logo"
                        app:layout_constraintVertical_bias="0.0" />

                    <EditText
                        android:id="@+id/languages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:hint="Write the languages you speaks!!"
                        android:textColorHint="@color/white"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="@+id/language_name"
                        app:layout_constraintStart_toStartOf="@+id/language_logo"
                        app:layout_constraintTop_toBottomOf="@+id/language_name"
                        tools:ignore="InvalidId" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>
            <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_margin="7dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/appCompatImageView3"
                    app:layout_constraintStart_toStartOf="@+id/appCompatImageView3"
                    app:layout_constraintTop_toTopOf="@+id/appCompatImageView3">

                    <ImageView
                        android:id="@+id/home"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="50dp"
                        android:src="@drawable/unselect_icon" />

                    <ImageView
                        android:id="@+id/history"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="50dp"
                        android:src="@drawable/history" />

                    <ImageView
                        android:id="@+id/friend"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="50dp"
                        android:src="@drawable/friends" />

                    <ImageView
                        android:id="@+id/account"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/selected_account" />

                </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>